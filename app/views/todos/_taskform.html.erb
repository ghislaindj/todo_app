<%= form_for(:todo, :remote => true) do |f| %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <div class="field">
    <%= f.label :done %><br />
    <%= f.check_box :done %>
  </div>
  <div class="field">
    <%= f.label :due %><br />
    <%= f.datetime_select :due %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
