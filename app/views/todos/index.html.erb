<% title "Todo manager" %>
<div class="well">
	<h1>Todo List</h1>
	<h2>Welcome <%= current_user.username %>, you have <%= @late_todos %> tasks for today</h2>
</div>

<div>
	<span>
		<a class="btn" data-toggle="modal" href="#myModal" >Add a new task</a>
	</span>

	<span>
		<div class="modal hide" id="myModal">
		  <div class="modal-header">
		    <button type="button" class="close" data-dismiss="modal">Ã—</button>
		    <h3>Add a new Task</h3>
		  </div>
		  <div class="modal-body">
			    <div id="todo_form" class="hidden">
			  		<%= render 'form' %>
				</div>
		  </div>
		</div>
	</span>
	<%= render :partial => 'search' %>
</div>


<br><br><br>
	<table class="table table-striped" id="todos">
	<thead>
		<th></th>
	    <th> Category 
	    	<%= link_to '<i class="icon-chevron-up"></i>'.html_safe , :sort => "category ASC" %>
	    	<%= link_to '<i class="icon-chevron-down"></i>'.html_safe , :sort => "category DESC" %>
	    </th>
	    <th>Task
	    	<%= link_to '<i class="icon-chevron-up"></i>'.html_safe , :sort => "body ASC" %>
	    	<%= link_to '<i class="icon-chevron-down"></i>'.html_safe , :sort => "body DESC" %>
	    </th>
	    <th>Due Date
	    	<%= link_to '<i class="icon-chevron-up"></i>'.html_safe , :sort => "due ASC" %>
	    	<%= link_to '<i class="icon-chevron-down"></i>'.html_safe , :sort => "due DESC" %>
	    </th>
	    <th>Is it done ?
	        <%= link_to '<i class="icon-chevron-up"></i>'.html_safe , :sort => "done ASC" %>
	    	<%= link_to '<i class="icon-chevron-down"></i>'.html_safe , :sort => "done DESC" %>	
	    </th>
	 </thead>
	 <tbody>
	<%= render :partial => @todos %>
	</tbody>
	</table>
	<button id="delete_multiple"> Delete Selection</button>

<%= will_paginate %>
